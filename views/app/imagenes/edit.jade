extends ../../layout.jade
block contenido
    div(class="wrapper")
        h1 Editar imagen
        form(action="/app/imagenes/#{imagen._id}?_method=PUT", method="POST" class="col-md-6")
            div(class="form-group ")
                lable(for="tittle") Titulo
                input(type="text", name="tittle", placeholder="Titulo de la imagen", id="tittle", class="form-control", value="#{imagen.tittle}")
            div(class="form-group ")
                lable(for="archivo") Imagen
                input(type="file", name="archivo",  id="archivo", class="form-control")
            input(type="submit", value="Guardar", class="btn btn-success")

